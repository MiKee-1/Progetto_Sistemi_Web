#!/usr/bin/env bash
# Script per fermare Docker Compose
# Uso: ./bin/docker-down
#      ./bin/docker-down -v  (rimuove anche i volumi)

set -e

cd "$(dirname "$0")/.."

# Verifica che docker compose sia disponibile
if ! command -v docker &> /dev/null; then
    echo "âŒ Docker non Ã¨ installato o non Ã¨ nel PATH"
    exit 1
fi

# Ferma docker compose con i parametri passati
echo "ğŸ›‘ Arresto Docker Compose..."
docker compose down "$@"
